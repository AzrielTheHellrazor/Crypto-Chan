{
  "compilerOptions": {
    // Modern runtime target
    "target": "ES2022",
    "lib": ["ES2022"],

    // Module resolution
    "module": "ESNext",
    "moduleResolution": "bundler",
    "moduleDetection": "force",
    "verbatimModuleSyntax": true,

    // Strictness & ergonomics
    "strict": true,
    "noEmit": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,

    // Bun globals
    "types": ["bun-types"]
  },
  "include": ["src"]
}
